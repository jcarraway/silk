{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "typeRoots": ["../../@types", "../../node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
